@model IEnumerable<RS2241A3.Models.PlaylistBaseViewModel>

@{
   ViewBag.Title = "Playlists";
}

<h2>@ViewBag.Title</h2>

<table class="table">
   <thead>
      <tr>
         <th>Playlist Name</th>
         <th>Number of tracks on this playlist</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model)
      {
         <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td><span class="badge">@Html.DisplayFor(modelItem => item.TracksCount)</span></td>
            <td>
               @Html.ActionLink("Edit", "Edit", new { id = item.PlaylistId }) |
               @Html.ActionLink("Details", "Details", new { id = item.PlaylistId })
            </td>
         </tr>
      }
   </tbody>
</table>
